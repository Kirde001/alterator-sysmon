{
  "priority_monitoring": {
    "processes": [
      "nginx",
      "apache2",
      "sshd",
      "sudo",
      "*sql*"
    ],
    "files": [
      "/etc/shadow",
      "/etc/passwd",
      "/var/www/html/*",
      "*.conf"
    ]
  },

  "ignore_extensions": [
    "*"
  ],

  "global_ignore_parents": [
    "*"
  ],

  "global_ignore_processes": [
    "*"
  ],

  "filters": {
    "process_execution": {
      "mode": "exclude",
      "rules": [
        {"pattern": "*nmap", "severity": "high"},
        {"pattern": "*nc", "severity": "high"}
      ]
    },
    "sensitive_file_access": {
      "mode": "exclude",
      "rules": []
    }
  }
}
